@model Carrinho.Models.Pedido

@{
    ViewData["Title"] = "Resumo do Pedido";
}

<h1>@ViewData["Title"]</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomePedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomePedido)
        </dd>
    </dl>

    <hr />
    <h4>Produtos do Pedido</h4>
    <div class="text-right">
        <a class="btn btn-info" asp-route-id="@Model.Id" asp-action="Carrinho"><span class="fas fa-plus"></span> Adicionar Produto</a>
    </div>

    <hr />

    <div>
        <partial name="_ListaCarrinho" model="@Model.PedidosItens" />
    </div>

</div>

<div>
    <hr />
    <a class="btn btn-danger" asp-action="Index"><span class="fas fa-arrow-left"></span> Voltar</a>
    <button class="btn btn-success example-popover" data-container="body" data-toggle="popover" data-placement="top" data-content="Este é somente um exemplo de carrinho de compras, não tem nada além disto." title="Ops!"><span class="fas fa-check"></span> Finalizar Pedido</button>
</div>

@section Scripts{ 
<script type="text/javascript">
    $(function () {
        $('.example-popover').popover({
            container: 'body'
        })
    })
</script>
}