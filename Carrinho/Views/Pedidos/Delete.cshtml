@model Carrinho.Models.Pedido

@{
    ViewData["Title"] = "Excluir Pedido";
}

<h1>@ViewData["Title"]</h1>
<br />
<h3 class="text-danger">Tem certeza que quer excluir o pedido @Model.NomePedido ?</h3>
<div>
    
    <h4>Pedido</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomePedido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomePedido)
        </dd>
    </dl>

    <h4>Produtos do Pedido</h4>    
    <hr />
    <div>
        <partial name="_ListaCarrinho" model="@Model.PedidosItens" />
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><span class="fas fa-trash-alt"></span> Excluir Pedido</button>
        <a class="btn btn-warning" asp-action="Index"><span class="fas fa-arrow-left"></span> Voltar</a>
    </form>
</div>
