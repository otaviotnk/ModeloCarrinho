@model Carrinho.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>@ViewData["Title"]</h1>
<br />
<h3 class="text-danger">Tem certeza que quer excluir o produto @Model.Nome ?</h3>
<div>
    <br />
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-warning" asp-action="Index"><span class="fas fa-arrow-left"></span> Voltar</a>
        <button type="submit" class="btn btn-danger"><span class="fas fa-trash-alt"></span> Excluir</button>        
    </form>
</div>
