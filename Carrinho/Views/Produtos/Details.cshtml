@model Carrinho.Models.Produto

@{
    ViewData["Title"] = "Detalhes de " + @Model.Nome;
}

<h1>@ViewData["Title"]</h1>
<br />
<div>
    <h4>Produto</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-danger" asp-action="Index"><span class="fas fa-arrow-left"></span> Voltar</a>
    <a class="btn btn-info" asp-action="Edit" asp-route-id="@Model.Id"><span class="fas fa-edit"></span> Editar</a>
</div>
